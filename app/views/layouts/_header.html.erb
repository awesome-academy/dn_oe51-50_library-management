<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("e-library"), home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), home_path %></li>
        <li><%= link_to t(".help"), help_path %></li>

        <% if logged_in? %>
          <li><%= link_to t("user"), users_path %></li>
          <li class="dropdown">
              <%= link_to "#", class: "dropdown-toggle","data-toggle": "dropdown" do %>
                  <%= t("title.account")%> 
                  <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                  <li><%= link_to t("title.profile"), "#" %></li>
                  <li><%= link_to t("title.setting"), "#" %></li>
                  <li class="divider"></li>
                  <li><%= link_to t("title.logout"), log_out, method: :delete %></li>
              </ul>
          </li>
          <% else %>
            <li><%= link_to t("layouts.header.log_in"), login_path %></li>
          <% end %>

        <li><%= link_to t(".contact"), contact_path %></li>
        <li><%= link_to t(".english"), locale: :en %></li>
        <li><%= link_to t(".vietnamese"), locale: :vi %></li>
      </ul>
    </nav>
  </div>
</header>
