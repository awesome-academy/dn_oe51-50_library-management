<% provide :title, t(".books") %>
<h1><%= t(".books") %></h1>

<%== pagy_bootstrap_nav(@pagy) %>

<ul class="books">
  <%= form_tag(books_path, method: :get) do %>
    <%= text_field_tag :term, params[:term], placeholder: t(".input_name") %>
    <%= submit_tag t(".search"), class: "btn btn-sm btn-success" %>
  <% end %>
  <li>
    <span><%= t ".book_title" %></span>
    <span><%= t ".publishing_house" %></span>
    <span><%= t ".quantity" %></span>
    <span><%= t ".year_published" %></span>
  </li>
</ul>

<ul class="books">
  <%= render @books %>
</ul>

<%== pagy_bootstrap_nav(@pagy) %>
